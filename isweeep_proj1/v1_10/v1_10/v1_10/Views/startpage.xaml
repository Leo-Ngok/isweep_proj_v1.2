<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="v1_10.Views.startpage">
    <ContentPage.Content>
        <StackLayout>
            
            <Label />
            <Label/>
            <Label/>
            <Label Text="Let's choose a language to get started."
                
                HorizontalOptions="CenterAndExpand" />
            <Picker SelectedIndex="0" x:Name="lang">
                
                <Picker.Items>
                    <x:String>English</x:String>
                    <x:String>繁體中文</x:String>
                    <x:String>简体中文</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Next" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>